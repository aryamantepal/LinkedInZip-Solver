{
    "manifest_version": 3,
    "name": "LinkedIn Zip Solver",
    "version": "1.0",
    "description": "Auto-solve LinkedIn's Zip puzzle",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.linkedin.com/games/zip/*"
            ],
            "js": [
                "solver.js",
                "overlay.js",
                "content.js"
            ]
        }
    ]
}